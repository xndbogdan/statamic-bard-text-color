{
  "require": {
    "statamic/cms": "^4.0"
  },
  "name": "xndbogdan/statamic-bard-text-color",
  "license": [
       "MIT"
   ],
  "keywords": [
    "statamic",
    "bard",
    "text-color"
  ],
  "description": "Statamic Bard Text Color",
  "autoload": {
    "psr-4": {
      "XndBogdan\\BardTextColor\\": "src"
    }
  },
  "type": "statamic-addon",
  "extra": {
    "statamic": {
      "name": "Statamic Bard Text Color",
      "description": "Text Color plugin for statamic bard"
    },
    "laravel": {
      "providers": [
        "XndBogdan\\BardTextColor\\ServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
